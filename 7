import java.util.Scanner;

class Complex {
    int real;
    int img;

    // Default constructor
    Complex() {
        this.real = 0;
        this.img = 0;
    }

    // Parameterized constructor (optional, for flexibility)
    Complex(int real, int img) {
        this.real = real;
        this.img = img;
    }

    // Function to take input
    void input() {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter real part: ");
        real = sc.nextInt();
        System.out.print("Enter imaginary part: ");
        img = sc.nextInt();
    }

    // Function to display complex number
    void display() {
        if (img >= 0)
            System.out.println(real + " + " + img + "i");
        else
            System.out.println(real + " - " + Math.abs(img) + "i");
    }

    // Function to add two complex numbers
    Complex add(Complex c2) {
        Complex result = new Complex();
        result.real = this.real + c2.real;
        result.img = this.img + c2.img;
        return result;
    }

    // Function to subtract two complex numbers
    Complex sub(Complex c2) {
        Complex result = new Complex();
        result.real = this.real - c2.real;
        result.img = this.img - c2.img;
        return result;
    }

    // Function to multiply two complex numbers
    Complex multiplication(Complex c2) {
        Complex result = new Complex();
        result.real = (this.real * c2.real) - (this.img * c2.img);
        result.img = (this.real * c2.img) + (this.img * c2.real);
        return result;
    }
}

public class Main {
    public static void main(String[] args) {
        Complex c1 = new Complex();
        Complex c2 = new Complex();
        Complex result;

        System.out.println("Enter first complex number:");
        c1.input();
        System.out.println("Enter second complex number:");
        c2.input();

        System.out.println("\nFirst Complex Number: ");
        c1.display();
        System.out.println("Second Complex Number: ");
        c2.display();

        // Addition
        result = c1.add(c2);
        System.out.print("\nAddition: ");
        result.display();

        // Subtraction
        result = c1.sub(c2);
        System.out.print("Subtraction: ");
        result.display();

        // Multiplication
        result = c1.multiplication(c2);
        System.out.print("Multiplication: ");
        result.display();
    }
}
